   "source": [
    "#體重轉換器\n",
    "weight=float(input(\"請輸入你的體重\"))\n",
    "unit = input(\"你的體重是公斤還是磅?(kg/lb)\").upper()\n",
    "\n",
    "if unit == \"KG\":\n",
    "    weight *=2.2\n",
    "    new_unit =\"磅\"\n",
    "elif unit == \"磅\":\n",
    "    weight/=2.2\n",
    "    new_unit =\"kg\"\n",
    "else:\n",
    "    print(\"單位錯誤\")\n",
    "    exit()\n",
    "    \n",
    "print(f\"你的體重是{round(weight)} {new_unit}\")\n",
    "    \n",
    " "
   ]
  }
